  <div class="table-wrapper">

<h1>All Reviews</h1>
<table class="fl-table">
  <thead>
    <tr>
      <th>review_id</th>
      <th>service_id</th>
       <th>user_id</th>
      <th>Rating </th>
      <th>content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%@reviews.each do |review| %>
      <tr>
        <td><%= review.id %></td>
        <td><%= review.service_id%></td>
        <td><%= review.user_id%></td>
        <td><%= review.rating %></td>
        <td><%= review.content %></td>
        <td><%= link_to "Edit", edit_review_path(review),class:"btn btn-outline-dark"%></td>
         <td><%= button_to "Destroy", review, method: :delete,class:"btn btn-outline-dark"%></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<div class="form1">
  <%= link_to "New Review", new_review_path,class:"btn btn-outline-dark" %>
<%= button_to "logout", destroy_user_session_path, method: :delete,class:"btn btn-outline-dark"%>
</div>

<div class="form">
<h1>Search Services </h1>
</div>
<div class="form">
<%= form_with url:search_path, method: :get do |form| %><br>
<h1>Search Services </h1>
