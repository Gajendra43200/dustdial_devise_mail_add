<div class="table-wrapper">
<table class="fl-table">
  <thead>
    <tr>
      <th>Status    |</th>
      <th>service_name         |</th>
      <th>location        |</th>
      <th>city</th>
      <th>avg_rating</th>
      <th>user_id</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <%@services.each do |service| %>
      <tr>
        <td><%= service.status %></td>
        <td><%= service.service_name %></td>
        <td><%= service.location %></td>
        <td><%= service.city %></td>
        <td><%= service.avg_rating %></td>
        <td><%= service.user_id %></td>
      </tr>
    <% end %>
  </tbody>
</table>
