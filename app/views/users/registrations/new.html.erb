<style type="">
  .card-registration .select-input.form-control[readonly]:not([disabled]) {
font-size: 1rem;
line-height: 2.15;
padding-left: .75em;
padding-right: .75em;
}
.card-registration .select-arrow {
top: 13px;
}
a {
    color: #fd9d0de8;
    text-decoration: underline;
}

</style>


<section class="h-100 bg-dark">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col">
        <div class="card card-registration my-4">
          <div class="row g-0">
            <div class="col-xl-6 d-none d-xl-block">
              <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/img4.webp"
                alt="Sample photo" class="img-fluid"
                style="border-top-left-radius: .25rem; border-bottom-left-radius: .25rem;" />
            </div>
            <div class="col-xl-6">
              <div class="card-body p-md-5 text-black">
                <h3 class="mb-5 text-uppercase">User registration form</h3>
                  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                 <%= render "users/shared/error_messages", resource: resource %>
                <div class="row">
                  <div class="col-md-6 mb-4">
                    <div class="form-outline">
                       <%= f.text_field :name, autofocus: true, autocomplete: "name",class:"form-control form-control-lg",placeholder:'Name' %>
                    </div>
                  </div>
                  <div class="col-md-6 mb-4">
                    <div class="form-outline">
                       <%= f.text_field :email, autofocus: true, autocomplete: "name",class:"form-control form-control-lg",placeholder:'Email' %>
                    </div>
                  </div>
                </div>

                <div class="row">
                  <div class="col-md-6 mb-4">
                    <div class="form-outline">
                      <%= f.text_field :location, autofocus: true, autocomplete: "location",class:"form-control form-control-lg",placeholder:'location' %>
                    </div>
                  </div>
                  <div class="col-md-6 mb-4">
                    <div class="form-outline">
                     <%= f.text_field :city, autofocus: true, autocomplete: "city",class:"form-control form-control-lg",placeholder:'city' %>
                    </div>
                  </div>

                  <div class="col-md-6 mb-4">
                    <div class="form-outline">
                     <%= f.text_field :state, autofocus: true, autocomplete: "state",class:"form-control form-control-lg",placeholder:'state' %>
                    </div>
                  </div>




                  <div class="col-md-6 mb-4">
                    <div class="form-outline">
                     <%= f.text_field :state, autofocus: true, autocomplete: "state",class:"form-control form-control-lg",placeholder:'state' %>
                    </div>
                  </div>
                </div>

                <div class="form-outline mb-4">
                  <%= f.file_field :user_profile, autofocus: true, autocomplete: "user_profile",class:"form-control form-control-lg" ,id:"form3Example8"  %>
                </div>

                <div class="form-outline mb-4">
                  <div class="d-md-flex justify-content-start align-items-center mb-4 py-2">

                  <h6 class="mb-0 me-4">User Type: </h6>

                  <div class="form-check form-check-inline mb-0 me-4">
                    <%= f.select :user_type, [["Admin", "Admin"], ["Customer", "Customer"]],class:"form-check-input" %>
                  </div>

                   </div>
                </div>


                <div class="form-outline mb-4">
                  <%= f.label :password %>
                  <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> characters minimum)</em>
                  <% end %><br />
                  <%= f.password_field :password, autocomplete: "new-password", class:"form-control form-control-lg",id:"form3Example97",placeholder:"password" %>
                  <!-- <input type="text" id="form3Example97" class="form-control form-control-lg" /> -->
                  <!-- <label class="form-label" for="form3Example97">Email ID</label> -->
                </div>

                <div class="form-outline mb-4">
                   <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control form-control-lg",id:"form3Example97",placeholder:"password_confirmation " %>
                </div>

                <div class="d-flex justify-content-end pt-3">
                  <%= f.submit "Sign up",class:"btn btn-warning btn-lg ms-2" %>
                </div>
                <%end%>
                <div class="d-flex justify-content-end pt-4">
                    <%= render "users/shared/links",class:"btn btn-warning btn-lg ms-2" %>
                </div>

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>




