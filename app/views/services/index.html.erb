<h1><%=flash[:notice]%></h1>
<h2>All Services</h2>
<div class="table-wrapper">
    <table class="fl-table">
        <thead>
        <tr>
           <th>picture</th>
           <th>Status</th>
           <th>service_name</th>
           <th>location</th>
           <th>city</th>
           <th>avg_rating</th>
           <th>user_id</th>
           <th>service_id</th>
           <th colspan="3"></th>
        </tr>
        </thead>
        <tbody>
        <%@services.each do |service| %>
      <tr>
        <%if service.service_profile.attached? %>
        <td> <%= image_tag service.service_profile, :style => "max-height:40px" %> </td>
        <%end %>
        <td><%= service.status %></td>
        <td><%= service.service_name %></td>
        <td><%= service.location %></td>
        <td><%= service.city %></td>
        <td><%= service.avg_rating %></td>
        <td><%= service.user_id %></td>
        <td><%= service.id %></td>
        <td><%= link_to "Edit", edit_service_path(service),class:'navbar-button'%></td>
        <td><%= button_to "Destroy", service, method: :delete,class:'navbar-button'%></td>
      </tr>
    <% end %>
        <tbody>
    </table>
</div>
<div class= "btn2"><%= button_to "logout", destroy_user_session_path ,method: :delete, class:'btn btn-outline-dark'%>
