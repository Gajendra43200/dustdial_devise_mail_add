
<style>
  body {
       border: 1px solid #ccc;
      font-family: Arial, sans-serif;
      display: flex;
      justify-content: center;
      background: grey;
      align-items: center;
      min-height: 100vh;
      color: white;
      margin: 0;
    }
section
{
  position: absolute;
  width: 100vw;
  height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 2px;
  flex-wrap: wrap;
  overflow: hidden;
}


.signin
{
  position: absolute;
  width: 400px;
  color: black;
  background: #e9ecef;
  z-index: 1000;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40px;
  border-radius: 4px;
  box-shadow: 0 15px 35px rgba(0,0,0,9);
}
h2
{
  font-size: 2em;
  text-transform: uppercase;
}

</style>
<div class="signin">
  <h2>Update Service</h2>
  <%= form_with model: @service do |form| %>
  <%= form.select :status, [["Open", "Open"], ["Close", "Close"]] %>
  <%= form.label :service_name %><br>
  <%= form.text_field :service_name %><br>

  <%= form.label :location %><br>
  <%= form.text_field :location %><br>

   <%= form.label :city %><br>
  <%= form.text_field :city %><br>

  <%= form.submit 'Update Service',class:"btn btn-outline-dark" %>
  <%= link_to "All Service", services_path,class:"btn btn-outline-dark" %>
  <% end %>
</div>
</div>
</section>


